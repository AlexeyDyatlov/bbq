<h2><%= t('.change_your_password') %></h2>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> символов минимум)</em>
        <% end %><br />
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock "></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %>
        <div class="input-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock "></span>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="form-group buffer-both">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
